{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"baseUrl": "./src",
        "checkJs": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"jsx": "react",
		"jsxFactory": "h",
		"module": "commonjs",
		"outDir": "dist",
        "pretty": true,
        "removeComments": true,
		"strict": true,
		"target": "esnext",
	},
	"include": [
		"src/**/*"
	],
	"parcelTsPluginOptions": {
		"transpileOnly": false
    }
}